<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js supports-no-cookies" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  {% capture seo_title %}
    {{ page_title }}
    {% if current_tags %}
      {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {% endif %}
    {% if current_page != 1 %}
      &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {% endif %}
    {% unless page_title contains shop.name %}
      &ndash; {{ shop.name }}
    {% endunless %}
  {% endcapture %}
  <title>{{ seo_title }}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}

  {{ 'theme.scss.css' | asset_url | stylesheet_tag }}

  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

    window.theme = {
      strings: {
        addToCart: {{ 'products.product.add_to_cart' | t | json }},
        soldOut: {{ 'products.product.sold_out' | t | json }},
        unavailable: {{ 'products.product.unavailable' | t | json }}
      },
      moneyFormat: {{ shop.money_format | json }}
    };
  </script>

  {% if template.directory == 'customers' %}
    <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script><!--<![endif]-->
    <!--[if lte IE 9]><script src="{{ 'shopify_common.js' | shopify_asset_url }}"></script><![endif]-->
  {% endif %}

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'vendor.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'vendor.js' | asset_url }}"></script><![endif]-->

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'theme.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'theme.js' | asset_url }}"></script><![endif]-->

  {{ content_for_header }}
</head>

<body id="{{ page_title | handle }}" class="sticky-footer template-{{ template.name | handle }}">

  <a class="in-page-link visually-hidden skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>

  <div class="microsite-masthead">
    <div class="flex-container">
      <a target="_blank" href="http://www.parliament.uk" class="microsite-masthead__back">{% include 'icon-back' %} <span>parliament.uk</span></a>
      <ul class="microsite-masthead__links">
        <li><a target="_blank" href="http://www.parliament.uk/business/">Parliamentary business</a></li>
        <li><a target="_blank" href="http://www.parliament.uk/mps-lords-and-offices/">MPs, Lords & offices</a></li>
        <li><a target="_blank" href="http://www.parliament.uk/about/">About Parliament</a></li>
        <li><a target="_blank" href="http://www.parliament.uk/get-involved/">Get involved</a></li>
        <li><a target="_blank" href="http://www.parliament.uk/visiting/">Visit</a></li>
        <li><a target="_blank" href="http://www.parliament.uk/education/">Education</a></li>
      </ul>
    </div>
  </div>

  {% section 'header' %}

  {% section 'offers-bar' %}

  {% include 'breadcrumbs' %}

  <main role="main" id="MainContent" class="sticky-footer-content">
    <div class="noflex-container">
      {% unless template == 'product' or template == 'cart' or template == 'collection' or template == 'page' or template == '404' or template == 'search' or template == 'collection.list' %}
        <h2 class="shop-heading">{{ shop.name }} {{ 'general.shop' | t }}</h2>
      {% endunless %}
      {% if template == 'product' %}
        <h2 class="shop-heading shop-heading__no-margin">{{ shop.name }} {{ 'general.shop' | t }}</h2>
        <h1 class="product--title">{{ product.title }}</h1>
      {% endif %}
      {% if template == 'cart' %}
        <h2 class="shop-heading shop-heading__no-margin">{{ shop.name }} {{ 'general.shop' | t }}</h2>
        <h1>{{ 'cart.general.title' | t }}</h1>
      {% endif %}
      {% if template == 'page' %}
        <h2 class="shop-heading shop-heading__no-margin">{{ shop.name }} {{ 'general.shop' | t }}</h2>
        <h1>{{ page.title }}</h1>
      {% endif %}
      {% if template == '404' %}
        <h2 class="shop-heading shop-heading__no-margin">{{ shop.name }} {{ 'general.shop' | t }}</h2>
        <h1>{{ 'general.404.title' | t }}</h1>
      {% endif %}
      {% if template == 'search' %}
        <h2 class="shop-heading shop-heading__no-margin">{{ shop.name }} {{ 'general.shop' | t }}</h2>
        <h1>
          {% if search.performed %}
            {% if search.results_count == 0 %}
              {{ 'general.search.no_results_html' | t: terms: search.terms }}
            {% else %}
              {{ 'general.search.results_for_html' | t: terms: search.terms }}
            {% endif %}
          {% else %}
            {{ 'general.search.title' | t }}
          {% endif %}
        </h1>
      {% endif %}
    </div>

    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

</body>
</html>
